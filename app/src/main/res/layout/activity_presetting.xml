<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/setting_activity_top_margin"
    tools:context="com.forfan.bigbang.component.activity.setting.SettingActivity">


    <com.forfan.bigbang.view.ColorTextView
        android:id="@+id/colortext"
        android:background="@drawable/button_white_stroke_green"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <com.forfan.bigbang.view.ColorTextView
        android:id="@+id/into"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_white_stroke_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <Button
        android:id="@+id/show"
        android:text="@string/show"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_introduction"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       />

    <Button
        android:id="@+id/gone"
        android:text="@string/gone"
        android:background="@drawable/button_introduction"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
     />



</LinearLayout>
