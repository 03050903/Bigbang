<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

      <LinearLayout
          android:id="@+id/activity_intro"
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent"
          android:paddingTop="@dimen/setting_activity_top_margin"
          tools:context="com.forfan.bigbang.component.activity.IntroActivity">

            <android.support.v7.widget.CardView
                android:id="@+id/bigbang_wraper"
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/bigbang_card_corner"
                android:layout_below="@id/intro"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/bigbang_bg"
                android:layout_marginLeft="@dimen/default_grow_margin"
                android:layout_marginRight="@dimen/default_grow_margin"
                android:layout_height="wrap_content">
                  <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                        <com.forfan.bigbang.view.BigBangLayoutWrapper
                            android:id="@+id/bigbang_wrap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:textSize="@dimen/text_size_small" />
                  </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text_size"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_double"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/margin_double"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="@dimen/setting_bigbang_activity_text_height" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/set_text_size"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/margin_double"
                android:paddingRight="@dimen/margin_double"
                android:max="100"
                android:layout_height="@dimen/setting_bigbang_activity_line_height" />

            <TextView
                android:id="@+id/line_margin"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_double"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/margin_double"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="@dimen/setting_bigbang_activity_text_height" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/set_line_margin"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/margin_double"
                android:paddingRight="@dimen/margin_double"
                android:max="100"
                android:layout_height="@dimen/setting_bigbang_activity_line_height" />



            <TextView
                android:id="@+id/item_margin"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_double"
                android:textColor="@color/black"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/margin_double"
                android:textSize="@dimen/text_size_normal"
                android:layout_height="@dimen/setting_bigbang_activity_text_height" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/set_item_margin"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/margin_double"
                android:paddingRight="@dimen/margin_double"
                android:max="100"
                android:layout_height="@dimen/setting_bigbang_activity_line_height" />


      </LinearLayout>
</ScrollView>

