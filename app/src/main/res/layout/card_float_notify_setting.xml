<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_view"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/show_float_view_rl"
        android:duplicateParentState="false"
        style="@style/hintTextViewRelativeLayoutSelector">

        <com.forfan.bigbang.view.HintTextView
            android:id="@+id/show_float_view_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/show_float_view_request"
            app:msg="@string/show_float_view" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/show_float_view_switch"
            style="@style/hintTextViewswitchStyle" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/show_notify_rl"
        android:duplicateParentState="false"
        style="@style/hintTextViewRelativeLayoutSelector">

        <View
            android:layout_width="match_parent"
            android:background="@color/divider"
            android:layout_height="1px"/>

        <com.forfan.bigbang.view.HintTextView
            android:id="@+id/show_notify_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/show_notify_request"
            app:msg="@string/show_notify" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/show_notify_switch"
            style="@style/hintTextViewswitchStyle" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/show_float_request_ll"
        android:duplicateParentState="false"
        android:orientation="vertical"
        android:visibility="gone"
        style="@style/cardViewRelativeLayoutSelector">
        <View
            android:layout_width="match_parent"
            android:background="@color/divider"
            android:layout_height="1px"/>

        <android.support.v7.widget.AppCompatTextView
            style="@style/cardViewTextViewInLayoutLeft"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/secondary_text"
            android:text="@string/show_float_close_tip"/>

    </LinearLayout>

</LinearLayout>