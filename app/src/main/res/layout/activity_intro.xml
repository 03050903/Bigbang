<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    tools:context="com.forfan.bigbang.component.activity.IntroActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_70dp"
                android:layout_marginRight="@dimen/dimen_70dp"
                android:layout_marginTop="@dimen/dimen_150dp"
                android:textColor="@color/white"
                android:text="@string/stringValue1" />

            <android.support.v7.widget.CardView
                android:id="@+id/bigbang_wraper"
                android:layout_width="match_parent"
                android:visibility="invisible"
                app:cardCornerRadius="@dimen/btn_corner"
                android:layout_below="@id/intro"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/default_general_margin"
                android:layout_marginRight="@dimen/default_general_margin"
                android:layout_marginTop="@dimen/margin_four"
                android:layout_height="wrap_content">

                <com.forfan.bigbang.view.BigBangLayout
                    android:id="@+id/bigbang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_double"
                    android:background="@color/bigbang_bg"
                    app:textSize="16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/enter_bigbang_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bigbang_wraper"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="在您选择文本后，可点击文本上方的按钮进行体验"
                android:background="@mipmap/bigbang_item_bg_sel"
                android:textColor="@color/white"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/enter_bigbang"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/bigbang_item_bg_sel"
                android:layout_marginBottom="@dimen/margin_four"
                android:text="@string/stringValue2"
                android:visibility="gone" />

        </RelativeLayout>
</LinearLayout>
