<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/setting_bigbang"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.forfan.bigbang.view.HintTextView
            android:id="@+id/setting_search_engine_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/setting_bigbang_intro"
            app:msg="@string/setting_bigbang" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />
    <RelativeLayout
        android:id="@+id/setting_floatview"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.forfan.bigbang.view.HintTextView
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/setting_float_intro"
            app:msg="@string/setting_floatview" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />
    <RelativeLayout
        android:id="@+id/setting_search_engine"
        style="@style/hintTextViewRelativeLayoutSelector"
        android:duplicateParentState="false">

        <com.forfan.bigbang.view.HintTextView
            android:id="@+id/show_float_view_tv"
            style="@style/hintTextViewInLayoutLeft"
            app:hint="@string/setting_search_engine_into"
            app:msg="@string/setting_search_engine" />

    </RelativeLayout>
